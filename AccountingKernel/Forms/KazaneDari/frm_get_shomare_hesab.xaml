<Window x:Class="AccountingKernel.Forms.KazaneDari.frm_get_shomare_hesab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="frm_get_shomare_hesab" Height="600" Width="800" Loaded="Window_Loaded_1" 

Style="{DynamicResource WindowStyle}">
    <Grid>
        <DataGrid x:Name="grd_fund" FlowDirection="RightToLeft" Style="{StaticResource DataGridStyle}" Margin="10,10,10,0" VerticalAlignment="Top" Height="536" AutoGenerateColumns="False" SelectionChanged="grd_fund_SelectionChanged">
            <DataGrid.Columns>
                <!-- <DataGridTextColumn Binding="{Binding Path=Id}" Header="کد" IsReadOnly="False"/> -->

                <DataGridTextColumn Binding="{Binding FAccountnumber}" Header="شماره حساب" IsReadOnly="False"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_hide" Content="انتخاب" Style="{StaticResource ButtonStyleRD}" Margin="10,551,10,10" Click="btn_select_Click" />

    </Grid>
</Window>
