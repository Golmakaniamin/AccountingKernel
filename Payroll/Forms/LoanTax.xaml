<Window x:Class="AccountingKernel.LoanTax"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoanTax" Height="600" Width="800" FlowDirection="RightToLeft" Style="{DynamicResource WindowStyle}" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="grdLoanTax" Margin="10,37,10,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" IsReadOnly="True" Binding="{Binding ID}" Visibility="Hidden"/>
                <DataGridTextColumn Header="کد معافیت" IsReadOnly="True" Binding="{Binding kod_moafiat}" />
                <DataGridTextColumn Header="نام معافیت" IsReadOnly="True" Binding="{Binding name_moafiat}" />
                <DataGridTextColumn Header="مبلغ" IsReadOnly="True"   Binding="{Binding money1}"/>
                <DataGridTextColumn Header="در صد معافیت" IsReadOnly="True"   Binding="{Binding darsad1}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
